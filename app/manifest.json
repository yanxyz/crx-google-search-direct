{
  "manifest_version": 2,
  "name": "Google Search Direct",
  "description": "Google Chrome extension for adding the original hyperlink to the
  search results on Google search page.
  ",
  "version": "2.0.0",
  "minimum_chrome_version": "50",
  "author": "Ivan Yan",
  "icons": {
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "include_globs": [
      "https://www.google.*/search*",
      "https://www.google.*/webhp*",
      "https://www.google.*/#q=*"
    ],
    "css": ["css/content.css"],
    "js": ["js/content.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "tabs",
    "https://*/*"
  ]
}
